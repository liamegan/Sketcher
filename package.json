{
  "name": "le-sketcher",
  "version": "0.0.3",
  "description": "A toolset used to draw creatively, provides either SVG (using SVG.js) or Canvas output ",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "umd:main": "dist/index.umd.js",
  "unpkg": "dist/index.umd.js",
  "exports": {
    ".": "./dist/index.modern.js"
  },
  "scripts": {
    "build": "rm -rf dist; npx microbundle",
    "dev": "microbundle watch",
    "prepare": "husky install; npm run build",
    "document": "npx typedoc src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/liamegan/Sketcher.git"
  },
  "author": "Liam Egan <liam@wethecollective.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/liamegan/Sketcher/issues"
  },
  "homepage": "https://github.com/liamegan/Sketcher#readme",
  "dependencies": {
    "@svgdotjs/svg.js": "^3.1.1",
    "wtc-math": "^1.0.13"
  },
  "devDependencies": {
    "husky": "^7.0.2",
    "microbundle": "^0.13.3",
    "prettier": "^2.4.0",
    "typedoc": "^0.22.3",
    "typescript": "^4.4.3"
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 80
  },
  "types": "dist/types.d.ts"
}
